<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        android:gravity="center"
        tools:context=".MainActivity" android:visibility="visible" android:layout_width="match_parent">

    <TextView
            android:text="@string/calculator"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:textSize="36sp" android:visibility="visible"
            android:lineSpacingExtra="10sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
    />
    <Button
            android:text="@string/simple"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/sim" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:visibility="visible"/>
    <Button
            android:text="@string/adv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/adv"
            android:visibility="visible" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sim" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="@string/about"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/abo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/adv" android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <Button
            android:text="@string/exit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ex" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/abo" android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>