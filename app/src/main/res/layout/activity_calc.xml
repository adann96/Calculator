<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Calc" android:id="@+id/constraintLayout">
    <Button
            android:text="-"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/minus"
            app:layout_constraintTop_toBottomOf="@+id/plus" app:layout_constraintStart_toEndOf="@+id/sive"
            android:onClick="onClickOperator"
            app:layout_constraintEnd_toStartOf="@+id/button42"
    />
    <Button
            android:text="7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/seven" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/eight"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:onClick="onClickNumber"/>
    <Button
            android:text="/"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/divide"
            android:onClick="onClickOperator"
            app:layout_constraintTop_toBottomOf="@+id/multiply" app:layout_constraintStart_toEndOf="@+id/equals"
            app:layout_constraintEnd_toStartOf="@+id/button41"
    />
    <Button
            android:text="4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/four" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seven" app:layout_constraintEnd_toStartOf="@+id/five"
            android:onClick="onClickNumber"/>
    <Button
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:id="@+id/button41"
            android:text="Bkp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/divide"
            app:layout_constraintTop_toBottomOf="@+id/button" android:onClick="onClickBackspace"/>
    <Button
            android:text="6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/sive"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintStart_toEndOf="@+id/five" app:layout_constraintEnd_toStartOf="@+id/minus"
            android:onClick="onClickNumber"/>
    <Button
            android:text="Clear"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/clearContent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/one" app:layout_constraintEnd_toStartOf="@+id/zero"
            android:onClick="onClickClear"/>
    <Button
            android:text="+"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/plus"
            app:layout_constraintStart_toEndOf="@+id/nine"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:onClick="onClickOperator"
            app:layout_constraintEnd_toStartOf="@+id/button42"
    />
    <Button
            android:text="8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/eight"
            app:layout_constraintStart_toEndOf="@+id/seven" app:layout_constraintEnd_toStartOf="@+id/nine"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:onClick="onClickNumber"/>
    <Button
            android:text="3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/three"
            app:layout_constraintTop_toBottomOf="@+id/sive"
            app:layout_constraintStart_toEndOf="@+id/two" app:layout_constraintEnd_toStartOf="@+id/multiply"
            android:onClick="onClickNumber"/>
    <Button
            android:text="="
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/equals" app:layout_constraintEnd_toStartOf="@+id/divide"
            app:layout_constraintTop_toBottomOf="@+id/three"
            app:layout_constraintStart_toEndOf="@+id/zero" android:onClick="onClickEqual"/>
    <Button
            android:layout_width="70dp"
            android:text="0"
            android:layout_height="wrap_content"
            android:id="@+id/zero"
            app:layout_constraintStart_toEndOf="@+id/clearContent"
            app:layout_constraintEnd_toStartOf="@+id/equals"
            android:onClick="onClickNumber"
            app:layout_constraintTop_toBottomOf="@+id/two"/>
    <Button
            android:text="x"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:onClick="onClickOperator"
            app:layout_constraintTop_toBottomOf="@+id/minus"
            app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintEnd_toStartOf="@+id/button41"
    />
    <Button
            android:layout_width="30dp"
            android:layout_height="72dp"
            android:id="@+id/button42" android:text="+ -"
            app:layout_constraintStart_toEndOf="@+id/plus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toTopOf="@+id/button"
            android:onClick="onClickChangeChar"/>
    <Button
            android:text="9"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/nine"
            app:layout_constraintStart_toEndOf="@+id/eight" app:layout_constraintEnd_toStartOf="@+id/plus"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:onClick="onClickNumber"/>
    <Button
            android:text="2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/five"
            app:layout_constraintStart_toEndOf="@+id/one" app:layout_constraintEnd_toStartOf="@+id/three"
            android:onClick="onClickNumber"/>
    <Button
            android:text="1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/one" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/four" app:layout_constraintEnd_toStartOf="@+id/two"
            android:onClick="onClickNumber"/>
    <TextView
            android:text="TextView"
            android:layout_width="320dp"
            android:layout_height="115dp"
            android:id="@+id/textView"
            android:typeface="monospace" android:textSize="30sp" android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="24dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.488" android:visibility="visible"/>
    <Button
            android:text="5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/eight"
            app:layout_constraintStart_toEndOf="@+id/four" app:layout_constraintEnd_toStartOf="@+id/sive"
            android:onClick="onClickNumber"/>
    <Button
            android:text="."
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button42"
            app:layout_constraintStart_toEndOf="@+id/minus"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintBottom_toTopOf="@+id/button41"
            android:onClick="onClickInsertComma"/>
</androidx.constraintlayout.widget.ConstraintLayout>